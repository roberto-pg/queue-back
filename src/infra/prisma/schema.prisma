generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Queue {
  id           String   @id @default(uuid())
  title        String
  abbreviation String
  priority     Int
  Ticket       Ticket[]

  @@map("queues")
}

model Ticket {
  id        String   @id @default(uuid())
  queue_id  String
  position  Int
  timestamp DateTime
  status    String
  Queue     Queue?   @relation(fields: [queue_id], references: [id], onDelete: NoAction, onUpdate: NoAction)

  @@map("tickets")
}
